generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuthSession {
  id           Int       @id @default(autoincrement())
  employeeId   Int       @unique
  refreshToken String    @unique
  ipAddress    String?
  userAgent    String?
  expiresAt    DateTime
  createdAt    DateTime  @default(now())
  revokedAt    DateTime?
  revoked      Boolean   @default(false)

  employee EmployeeRef @relation(fields: [employeeId], references: [id])
}

model LoginAttempt {
  id         Int      @id @default(autoincrement())
  employeeId Int?
  email      String?
  success    Boolean
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  employee EmployeeRef? @relation(fields: [employeeId], references: [id])
}

model EmployeeRef {
  id           Int            @id
  email        String         @unique
  AuthSession  AuthSession[]
  LoginAttempt LoginAttempt[]
}
